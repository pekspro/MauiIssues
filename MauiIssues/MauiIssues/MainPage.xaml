<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:MauiIssues"
             x:Class="MauiIssues.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <HorizontalStackLayout>
                <Button 
                    x:Name="DarkButtom"
                    Text="Dark theme"
                    Clicked="DarkButtom_Clicked"
                    />

                <Button 
                    x:Name="LightButtom"
                    Text="Light theme"
                    Clicked="LightButtom_Clicked"
                    />
            </HorizontalStackLayout>

            <Label Text="Sample buttons:" />
            <Button Text="Button one" />
            <Button Text="Button two" x:Name="ButtonTwo" IsEnabled="False"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
