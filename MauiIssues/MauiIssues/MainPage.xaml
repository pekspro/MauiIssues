<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiIssues.MainPage">

    <VerticalStackLayout>

        <Label Text="Three columns with spacing:" />

        <Grid HorizontalOptions="Start"
              ColumnDefinitions="auto, auto, auto"
              ColumnSpacing="20"
              BackgroundColor="#992266">

            <Label
                  Grid.Column="0"
                  Text="Column 0"
                  BackgroundColor="#A8DCDC"
                  HeightRequest="50"
                  WidthRequest="100"
                  HorizontalTextAlignment="Center"
                  VerticalTextAlignment="Center"
                  />

            <Label
                  Grid.Column="1"
                  Text="Column 1"
                  BackgroundColor="#A8DCDC"
                  HeightRequest="50"
                  WidthRequest="100"
                  HorizontalTextAlignment="Center"
                  VerticalTextAlignment="Center"
                  />
            
            <Label
                  Grid.Column="2"
                  Text="Column 2"
                  BackgroundColor="#A8DCDC"
                  HeightRequest="50"
                  WidthRequest="100"
                  HorizontalTextAlignment="Center"
                  VerticalTextAlignment="Center"
                  />

        </Grid>


        <Label Text="Last column is missing, including the spacing:" Margin="0,20,0,0" />
        
        <Grid HorizontalOptions="Start"
              ColumnDefinitions="auto, auto, auto"
              ColumnSpacing="20"
              BackgroundColor="#992266">

            <Label
                  Grid.Column="0"
                  Text="Column 0"
                  BackgroundColor="#A8DCDC"
                  HeightRequest="50"
                  WidthRequest="100"
                  HorizontalTextAlignment="Center"
                  VerticalTextAlignment="Center"
                  />

            <Label
                  Grid.Column="1"
                  Text="Column 1"
                  BackgroundColor="#A8DCDC"
                  HeightRequest="50"
                  WidthRequest="100"
                  HorizontalTextAlignment="Center"
                  VerticalTextAlignment="Center"
                  />
        </Grid>


        <Label Text="First column is missing, but not the spacing:" Margin="0,20,0,0" />
        
        <Grid HorizontalOptions="Start"
              ColumnDefinitions="auto, auto, auto"
              ColumnSpacing="20"
              BackgroundColor="#992266">

            <Label
                  Grid.Column="1"
                  Text="Column 1"
                  BackgroundColor="#A8DCDC"
                  HeightRequest="50"
                  WidthRequest="100"
                  HorizontalTextAlignment="Center"
                  VerticalTextAlignment="Center"
                  />

            <Label
                  Grid.Column="2"
                  Text="Column 2"
                  BackgroundColor="#A8DCDC"
                  HeightRequest="50"
                  WidthRequest="100"
                  HorizontalTextAlignment="Center"
                  VerticalTextAlignment="Center"
                  />

        </Grid>

        
        <Label Text="Center column is missing:" Margin="0,20,0,0" />
        
        <Grid HorizontalOptions="Start"
              ColumnDefinitions="auto, auto, auto"
              ColumnSpacing="20"
              BackgroundColor="#992266">

            <Label
                  Grid.Column="0"
                  Text="Column 0"
                  BackgroundColor="#A8DCDC"
                  HeightRequest="50"
                  WidthRequest="100"
                  HorizontalTextAlignment="Center"
                  VerticalTextAlignment="Center"
                  />

            <Label
                  Grid.Column="2"
                  Text="Column 2"
                  BackgroundColor="#A8DCDC"
                  HeightRequest="50"
                  WidthRequest="100"
                  HorizontalTextAlignment="Center"
                  VerticalTextAlignment="Center"
                  />

        </Grid>


    </VerticalStackLayout>

</ContentPage>
