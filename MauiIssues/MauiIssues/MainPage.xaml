<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiIssues.MainPage">
			 
    <VerticalStackLayout>
        <CheckBox IsChecked="{Binding IsSet}" />

        <VerticalStackLayout BackgroundColor="DarkBlue" VerticalOptions="End">
            <CheckBox IsChecked="{Binding IsSet, Mode=OneWay}" />

            <Switch IsToggled="{Binding IsSet, Mode=OneWay}" />

            <Label Text="{Binding IsSet, Mode=OneWay}" />
        </VerticalStackLayout>
    </VerticalStackLayout>
 
</ContentPage>
