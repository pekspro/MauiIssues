<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiIssues.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">

            <SwipeView>
                <SwipeView.LeftItems>
                    <SwipeItems>
                        <SwipeItem Text="Favorite" BackgroundColor="LightGreen" />
                        <SwipeItem Text="Delete" BackgroundColor="LightPink"
                       />
                    </SwipeItems>
                </SwipeView.LeftItems>
                <Grid HeightRequest="60" BackgroundColor="LightGray">
                    <Label Text="Swipe right" HorizontalOptions="Center" VerticalOptions="Center" />
                </Grid>
            </SwipeView>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
