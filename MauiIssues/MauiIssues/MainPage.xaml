<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiIssues.MainPage">

    <Grid RowDefinitions="*, auto">
        <Label 
            Text="Hello, World!"
            FontSize="32"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        
        <Grid Grid.Row="1" RowDefinitions="auto, auto">
            <Label Grid.Row="0" Text="This is a secret message" x:Name="SecretLabel" IsVisible="False" />
            <Button Grid.Row="1" Text="Toggle secret" Clicked="Button_Clicked" />
        </Grid>

        <!--
        If this is used instead everything works as expected:
        
        <VerticalStackLayout Grid.Row="1">
            <Label Text="This is a secret message" x:Name="SecretLabel" IsVisible="False" />
            <Button Text="Toggle secret" Clicked="Button_Clicked" />
        </VerticalStackLayout>
        -->
    </Grid>
</ContentPage>
